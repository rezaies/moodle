{{!
    @template core_course/completion_manual

    Template for displaying the activity's dates.

    Example context (json):
    {
        "cmid": 1,
        "isdone": true
    }
}}
<span>
    {{#overallcomplete}}
        <button class="btn btn-outline-success" data-action="manual:undo" data-cmid="{{cmid}}">
            <i class="fa fa-check" aria-hidden="true"></i> {{#str}} completion_manual:done, core_course {{/str}}
        </button>
    {{/overallcomplete}}
    {{#overallincomplete}}
        <button class="btn btn-outline-secondary" data-action="manual:mark-done" data-cmid="{{cmid}}">{{#str}} completion_manual:markdone, core_course {{/str}}</button>
    {{/overallincomplete}}
</span>
